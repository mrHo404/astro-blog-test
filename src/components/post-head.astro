---
import { Image } from '@astrojs/image/components';
import type { BlogPost } from '@types';
import { formatDate, slugify } from '@utils';

interface Props {
  blogPost: BlogPost;
}

const { title, date, category, author, image } = Astro.props.blogPost;
---

<header>
  <div class='container'>
    <small>
      <a href={`/category/${slugify(category)}/`} class='badge'>
        {category}
      </a>
    </small>
    <h1 class='h2'>{title}</h1>
    <p>
      by <a href={`/author/${slugify(author)}/`}>{author}</a>Â· {
        formatDate(date)
      }
    </p>
  </div>
  <Image
    src={image.src}
    alt={image.alt}
    width={1200}
    height={600}
    format={'avif'}
    fit={'cover'}
    quality={80}
    aspectRatio={'5:2'}
    class={'hero-image'}
  />
</header>
