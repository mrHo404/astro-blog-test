---
import { Image } from '@astrojs/image/components';
import { BlogPost, STYLE } from '../types';
import { formatDate, slugify } from '../utils';
import Link from './link.astro';

interface Props {
  blogPost: BlogPost;
  url?: string;
  tagType: keyof JSX.IntrinsicElements;
}

const { blogPost, url, tagType = 'h2' } = Astro.props as Props;
const { title, date, category, author, image, description } = blogPost;
const Tag = tagType;
---

<article class='card'>
  <small>
    <a href={`/category/${slugify(category)}/`} class='badge'>
      {category}
    </a>
  </small>
  <a href={url} aria-hidden='true' tabindex='-1'>
    <Image
      src={image.src}
      alt={image.alt}
      width={400}
      height={250}
      format={'avif'}
      fit={'cover'}
      quality={80}
      aspectRatio={'4:1'}
    />
  </a>
  <div class='content'>
    <div>
      <Tag class='h3'>
        <a href={url}>{title}</a>
      </Tag>
      <small>
        by <a href={`/author/${slugify(author)}/`}>{author}</a>Â· {
          formatDate(date)
        }
      </small>
    </div>
    <p>{description}</p>
    <Link href={url ?? ''} text='Read Post' style={STYLE.SECONDARY} />
  </div>
</article>
